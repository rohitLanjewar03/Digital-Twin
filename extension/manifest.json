{
  "manifest_version": 3,
  "name": "Email Assistant History Connector",
  "version": "1.0.0",
  "description": "Connect your browsing history with Email Assistant for enhanced context",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "history",
    "identity",
    "scripting",
    "notifications",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "http://localhost:5000/*",
    "http://localhost:5173/*",
    "http://localhost:3000/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["onboarding.html", "onboarding.js"],
      "matches": ["<all_urls>"]
    }
  ]
} 